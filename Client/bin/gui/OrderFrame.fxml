<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.OrderFrameController">
   <children>
      <ListView fx:id="lstViewCart" layoutX="610.0" layoutY="32.0" prefHeight="478.0" prefWidth="330.0" />
      <VBox fx:id="vBoxCart" layoutX="586.0" layoutY="34.0" prefHeight="478.0" prefWidth="360.0">
         <children>
            <Pane fx:id="paneLineCart" layoutY="50.0" prefHeight="43.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="imgProductCart" fitHeight="31.0" fitWidth="36.0" layoutX="6.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="lblProductNameCart" layoutX="59.0" layoutY="13.0" text="Product Name" />
                  <Label fx:id="lblProductPriceCart" layoutX="315.0" layoutY="14.0" text="Price" />
                  <Label fx:id="lblQuantatyPerProduct" layoutX="215.0" layoutY="13.0" text="Label" />
                  <Button fx:id="bntAddProduct" layoutX="153.0" layoutY="7.0" minHeight="21.0" minWidth="26.0" mnemonicParsing="false" onAction="#addQuantatyToCart" prefHeight="30.0" prefWidth="10.0" text="+" />
                  <Button fx:id="bntSubFromCart" layoutX="255.0" layoutY="7.0" mnemonicParsing="false" onAction="#subQuantatyFromCart" prefHeight="30.0" prefWidth="10.0" text="-" />
               </children>
            </Pane>
         </children>
      </VBox>
      <Button fx:id="btnCheckOutOrder" layoutX="847.0" layoutY="564.0" mnemonicParsing="false" onAction="#checkOutOrder" style="-fx-background-color: green;" text="CheckOut">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <Label layoutX="798.0" layoutY="520.0" text="Total:">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label fx:id="lblTotalPrice" layoutX="861.0" layoutY="521.0" text="price $$$">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label layoutX="619.0" layoutY="4.0" text="Cart:">
         <font>
            <Font name="System Italic" size="20.0" />
         </font>
      </Label>
      <Button fx:id="btnCancelOrder" layoutX="614.0" layoutY="564.0" mnemonicParsing="false" onAction="#cancelOrder" style="-fx-background-color: red;" text="Cancel Order">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <ListView fx:id="lstViewProduct" prefHeight="600.0" prefWidth="610.0" />
      <VBox fx:id="vBoxProduct" layoutY="14.0" prefHeight="594.0" prefWidth="610.0">
         <children>
            <Pane fx:id="paneLineProduct" layoutY="50.0" prefHeight="100.0" prefWidth="150.0">
               <children>
                  <ImageView fx:id="imgProduct" fitHeight="83.0" fitWidth="93.0" layoutX="21.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="lblProductDetails" layoutX="176.0" layoutY="14.0" text="product details" />
                  <Label fx:id="lblProductPrice" layoutX="183.0" layoutY="55.0" text="price" />
                  <Button fx:id="btnAddToCart" layoutX="373.0" layoutY="33.0" mnemonicParsing="false" onAction="#addToCart" prefHeight="31.0" prefWidth="101.0" text="Add to Cart" />
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</AnchorPane>
